{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": ["src/**/*", "scripts/**/*", ".storybook/**/*", "ai/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/design-tokens",
    "scripts/**/dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
